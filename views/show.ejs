<%- include('./partials/header') %>
<div class="ui main text container segment">
    <div class="ui huge header"><%=blog.title%></div>
    <div class="ui top attached">
        <div class="item">
            <img class="ui centered rounded big image" src="<%=blog.image%>" width="200px">
        </div>
        <div class="content" style="margin: 20px;">
            <strong><span><%=blog.created.toDateString()%></span></strong>
        </div>
        <div class="description">
            <p><%=blog.body%></p>
        </div>
        <div style="margin-top: 20px;">
            <a class="ui primary big basic button" href="/blogs/<%=blog._id%>/edit">Edit</a>
            <form style="display: inline;" action="/blogs/<%=blog._id%>?_method=DELETE" method="POST">
                <button type="submit" class="ui negative big basic button">Delete</button>
            </form>
        </div>
    </div>
</div>
<%- include('./partials/footer') %>