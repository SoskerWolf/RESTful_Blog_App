<%- include('./partials/header') %>
<div class="ui main text container segment">
    <div class="ui huge header">Edit Blog</div>
    <form class="ui form" action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%=blog.title%>" placeholder="title">
        </div>
        <div class="field">
            <label>Image</label>
            <div style="display: flex;">
                <input type="text" name="blog[image]" value="<%=blog.image%>" placeholder="image">
                <img src="<%=blog.image%>" width="50px">
            </div>
            
        </div>
        <div class="field">
            <label>Blog post</label>
            <textarea type="text" name="blog[body]" placeholder="blog post goes here" rows="8"><%=blog.body%></textarea>
        </div>
        <input class="ui primary big basic button" type="submit" value="update" >
    </form>
</div>
<%- include('./partials/footer') %>